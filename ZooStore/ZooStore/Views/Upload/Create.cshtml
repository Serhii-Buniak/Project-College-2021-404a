@model ProductForm

@{
    ViewData["Title"] = "Create";
}
<link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>
<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" asp-for="Image" />
            </div>
            <div>
                <label asp-for="SubcategoryId"></label>
                <select asp-for="SubcategoryId" asp-items="ViewBag.Categories" class="custom-select"></select>
            </div>

            <div class="property-array">
                <div class="property-element">
                    <label for="Properties_0__Key">Key 0</label>
                    <input class="form-control" type="text" data-val="true" data-val-required="The Key field is required." id="Properties_0__Key" name="Properties[0].Key" value="">
                    <label for="Properties_0__Value">Value 0</label>
                    <input class="form-control" type="text" data-val="true" data-val-required="The Value field is required." id="Properties_0__Value" name="Properties[0].Value" value="">
                </div>

            </div>

            @*<div>
            <label asp-for="Properties[0].Key"></label>
            <input asp-for="Properties[0].Key" class="form-control" />
            <label asp-for="Properties[0].Value"></label>
            <input asp-for="Properties[0].Value" class="form-control" />
        </div>*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input type="button" onclick="addProp()" value="Add propetry">
            <input type="button" onclick="removeProp()" value="Remove propetry">
        </form>
        <script src="~/js/array-of-property.js"></script>
    </div>
</div>

