@model ProductListViewModel
@{
    ViewData["Title"] = "Пошук";
}


@if (ViewBag.Search is not null)
{
    <div class="all">
        <div class="main">
            <div class="main1">
                <span style="font-size: xx-large;"> <b>Результат пошуку:</b> @ViewBag.Search </span>
            </div>
        </div>
        <div class="line"></div>
    </div>
}



<div class="search_select">
    <form method="get">
        <input type="hidden" name="search" id="search" value="@ViewBag?.Search" />
        <div class="search_select_left">
            <p>категорія</p>
            <select name="subcategoryId" id="subcategoryId" asp-items="ViewBag.Subcategories" class="custom-select">
                <option value=""> Не обрано </option>
            </select>
        </div>
        <div class="search_select_left" name="comparer">
            <p>сортування</p>
            <select data-val="true" data-val-required="The SelectedTag field is required." name="comparer" id="comparer" asp-items="ViewBag.Comparers" class="custom-select">
                <option value=""> Не обрано </option>
            </select>
        </div>
        <div class="search_select_left">
            <p>Ціна</p>
            <input name="minPrice" placeholder="@String.Format("{0:f0}", ViewBag.MinPrice ?? String.Empty)">
            <input name="maxPrice" placeholder="@String.Format("{0:f0}", ViewBag.MaxPrice ?? String.Empty)">
            <button>OK</button>
        </div>
    </form>
</div>

<div class="clear"></div>
<div class="search_wrapper">
    @foreach (Product product in Model.Products)
    {
        <a asp-action="Product" asp-route-id="@product.Id">
            <div class="search_box">
                <img src="/upload/@product.Picture" alt="@product.Name">
                <p>@product.Name</p>
                <span>@product.Price.ToString("#") ₴</span>
                <button>Замовити</button>
            </div>
        </a>
    }
</div>
<div class="clear"></div>

<div page-model="@Model.PagingInfo" page-action="Search"></div>
<div class="search_scroll">
    <div class="search__page-block">
        <div class="search__page  search__page-selected"> <span>1</span></div>
    </div>

    <div class="search__page-block">
        <div class="search__page"><span>2</span></div>
    </div>


    <div class="search__page-block">
        <div class="search__page"><span>3</span></div>
    </div>


    <div class="search__page-block">
        <div class="search__page"><span>4</span></div>
    </div>


    <div class="search__page-block">
        <div class="search__page"><span>5</span></div>
    </div>
    
    <div class="search__page-block">
        <div class="search__page"><span>...</span></div>
    </div>

    <div class="search__page-block">
        <div class="search__page"><span>6</span></div>
    </div>


    <div class="search__page-block">
        <div class="search__page"><span>7</span></div>
    </div>



</div>
<div class="clear"></div>



<div class="search_slider">

    <span>Недавно переглянуті товариші</span>


    <div class="wrapper">
        <div class="carousel owl-carousel">
            <div class="search_slider_box">
                <img src="/search/img/item.png" alt="">
                <p>Sheba Fine Flakes</p>
                <span>13,70 ₴</span>
            </div>
