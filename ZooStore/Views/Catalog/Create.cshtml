@model ProductForm

@{
    ViewData["Title"] = "Create";
}
<link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Create" lang="ru">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label">Назва товару</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label">Ціна</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label">Опис</label>
                <input asp-for="Description" class="form-control" />
            </div>

            <div class="form-group">
                <label">Фото товару</label>
                <input type="file" asp-for="Image" />
            </div>
            <div class="form-group">
                <label asp-for="Unique" class="control-label">Товар унікальний?</label>
                <div class="form-group">
                    <label>Ні</label>
                    <input checked type="radio" asp-for="Unique" value="false" />
                </div>
                <div class="form-group">
                    <label>Так</label>
                    <input type="radio" asp-for="Unique" value="true" />
                </div>
            </div>
            <div>
                <label>Категорія</label>
                <select asp-for="SubcategoryId" asp-items="ViewBag.Subcategories" class="custom-select"></select>
            </div>

            <div class="property-array">
                <div class="property-element">
                    <label for="Properties_0__Key">Ключ 1</label>
                    <input class="form-control" type="text" data-val="true" data-val-required="The Key field is required." id="Properties_0__Key" name="Properties[0].Key" value="">
                    <label for="Properties_0__Value">Значення 1</label>
                    <input class="form-control" type="text" data-val="true" data-val-required="The Value field is required." id="Properties_0__Value" name="Properties[0].Value" value="">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input type="button" onclick="addProp()" value="Add propetry">
            <input type="button" onclick="removeProp()" value="Remove propetry">
        </form>
        <script src="~/js/array-of-property.js"></script>
    </div>
</div>

